<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Dialog title="Add New Product">
        <content>
            <Panel>
                <Label text="Product Name" required="true"/>
                <Input id="productName" maxLength="10" liveChange="handleProductNameChange"/>
                <!-- <Input id="productName" maxLength="10" valueState="Error" valueStateText="Please Enter Product Name"/> -->
                <Label text="Product Price" required="true"/>
                <Input id="productPrice" maxLength="5" liveChange="handleProudctPrice"/>
            </Panel>
        </content>
        <beginButton>
            <Button text="Submit" press="handleSubmit"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="handleCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
